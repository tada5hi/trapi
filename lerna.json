{
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        ".eslintrc",
        "package.json"
      ]
    },
    "version": {
      "message": "build(release): publish"
    }
  },
  "npmClient": "npm",
  "conventionalCommits": true,
  "version": "independent",
  "changelog": {
    "labels": {
      "build": "Build",
      "ci": "Continuous Integration",
      "docs": "Documentation",
      "feat": "New Feature",
      "fix": "Bug Fix",
      "perf": "Performance",
      "refactor": "Refactor",
      "revert": "Revert",
      "style": "Style",
      "test": "Test"
    }
  },
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
